<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
       />
    <Button
        android:id="@+id/groupListBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/titleHome"
        android:layout_alignStart="@+id/titleHome"
        android:layout_alignEnd="@+id/titleHome"
        android:layout_marginStart="-92dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="-90dp"
        android:layout_marginBottom="313dp"
        android:backgroundTint="#808080"
        android:drawableLeft="@drawable/groupsicon"
        android:text="group list"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E0E0E0"
        android:gravity="center"
        android:orientation="vertical">


            <ImageButton
                android:id="@+id/newGroupBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/addnewgroup"
                android:backgroundTint="#808080"
                android:background="?attr/selectableItemBackgroundBorderless"
            />



    </LinearLayout>

</RelativeLayout>
