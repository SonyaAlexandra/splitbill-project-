<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".AddItemActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="add item"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="16dp" />

    <!-- Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_marginBottom="16dp" />

    <!-- Input for Item Name -->
    <EditText
        android:id="@+id/inputItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="item name"
        android:backgroundTint="#D3D3D3"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- Input for Amount -->
    <EditText
        android:id="@+id/inputAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="how much"
        android:inputType="numberDecimal"
        android:backgroundTint="#D3D3D3"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- Input for Currency -->
    <Spinner
        android:id="@+id/spinnerCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D3D3D3" />
    />

    <!-- Share Equally Checkbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/checkShareEqually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#000000"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txtShareEqually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share equally"
            android:textSize="16sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Member Buttons -->
    <LinearLayout
        android:id="@+id/memberButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <!-- Sample Buttons for Members -->
        <Button
            android:id="@+id/btnPerson1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#808080"
            android:text="person 1"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPerson2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#808080"
            android:text="person 2"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnPerson3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#808080"
            android:text="person 3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Done Button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#808080"
        android:text="DONE"
        android:textColor="#FFFFFF" />

</LinearLayout>
